<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dp_16"
    android:layout_marginVertical="@dimen/dp_12">

    <ImageView
        android:id="@+id/article_image"
        android:layout_width="@dimen/dp_88"
        android:layout_height="@dimen/dp_84"
        android:background="@drawable/bg_image_10"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/article_info"
        android:layout_width="@dimen/dp_185"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_10"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/article_image"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/article_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grayBlack"
            android:textSize="@dimen/sp_12"
            tools:text="Thu, Apr 19 Â· 20.00 Pm" />

        <TextView
            android:id="@+id/article_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/grayBlack"
            android:textSize="@dimen/sp_12"
            android:textStyle="bold"
            app:fontWeight="700"
            tools:text="Musk invited to UK Parliament to discuss $44 billion Twitter buyout" />

    </LinearLayout>

    <ImageView
        android:id="@+id/heart_icon"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_12"
        android:src="@drawable/ic_baseline_favorite_border_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/article_info"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/grey" />

    <ImageView
        android:id="@+id/share_icon"
        android:layout_width="@dimen/dp_18"
        android:layout_height="@dimen/dp_18"
        android:layout_marginStart="@dimen/dp_16"
        android:src="@drawable/ic_outline_share_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/heart_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/grey" />

</androidx.constraintlayout.widget.ConstraintLayout>